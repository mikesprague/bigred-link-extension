{
  "name": "bigred-link-extension",
  "version": "1.0.15",
  "description": "",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">= 16.x",
    "npm": ">= 8.x"
  },
  "scripts": {
    "build": "vite build",
    "clean": "rm -rf ./build",
    "dev": "vite build --watch --mode development --sourcemap",
    "prebuild": "npm run clean",
    "prestart": "npm run clean",
    "preview": "vite preview",
    "prezip": "npm run build",
    "start": "npm run dev",
    "test": "echo \"Error: no test specified\" && exit 1",
    "zip": "cd build && zip -r bigred-link-extension.zip ./"
  },
  "keywords": [],
  "repository": {
    "url": "https://github.com/mikesprague/bigred-link-extension"
  },
  "author": {
    "name": "Michael Sprague",
    "email": "mikesprague@gmail.com"
  },
  "homepage": "https://github.com/mikesprague/bigred-link-extension",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mikesprague/bigred-link-extension/issues"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "6.4.0",
    "@fortawesome/free-brands-svg-icons": "6.4.0",
    "@fortawesome/free-regular-svg-icons": "6.4.0",
    "@fortawesome/free-solid-svg-icons": "6.4.0",
    "@fortawesome/react-fontawesome": "0.2.0",
    "axios": "1.4.0",
    "clipboard-polyfill": "4.0.0",
    "dayjs": "1.11.9",
    "dexie": "3.2.4",
    "dompurify": "3.0.4",
    "nanoid": "4.0.2",
    "prop-types": "15.8.1",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@babel/eslint-parser": "7.22.7",
    "@babel/eslint-plugin": "7.22.5",
    "@babel/preset-env": "7.22.6",
    "@fullhuman/postcss-purgecss": "5.0.0",
    "@vitejs/plugin-react-swc": "3.3.2",
    "autoprefixer": "10.4.14",
    "cross-env": "7.0.3",
    "cssnano": "6.0.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "8.44.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-prettier": "8.8.0",
    "eslint-config-stylelint": "19.0.0",
    "eslint-plugin-compat": "4.1.4",
    "eslint-plugin-html": "7.1.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jsx-a11y": "6.7.1",
    "eslint-plugin-markdown": "3.0.0",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.32.2",
    "eslint-plugin-react-hooks": "4.6.0",
    "eslint-plugin-security": "1.7.1",
    "postcss": "8.4.24",
    "postcss-cli": "10.1.0",
    "prettier": "3.0.0",
    "prettier-eslint": "15.0.1",
    "sass": "1.63.6",
    "stylelint": "14.16.1",
    "stylelint-config-prettier": "9.0.5",
    "stylelint-config-prettier-scss": "0.0.1",
    "stylelint-config-standard": "29.0.0",
    "stylelint-config-standard-scss": "6.1.0",
    "stylelint-prettier": "3.0.0",
    "tailwindcss": "3.3.2",
    "vite": "4.3.9",
    "vite-plugin-html": "3.2.0"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es6": true,
      "node": true
    },
    "settings": {
      "jest": {
        "version": 28
      }
    },
    "extends": [
      "airbnb",
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:react-hooks/recommended",
      "plugin:jsx-a11y/recommended",
      "prettier",
      "stylelint"
    ],
    "plugins": [
      "compat",
      "html",
      "import",
      "jsx-a11y",
      "markdown",
      "prettier",
      "react",
      "react-hooks"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "allowImportExportEverywhere": true,
      "parser": "@eslint/babel-parser",
      "ecmaFeatures": {
        "jsx": true,
        "impliedStrict": true,
        "modules": true
      },
      "sourceType": "module"
    },
    "rules": {
      "react/jsx-filename-extension": [
        "error",
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ],
      "react/function-component-definition": [
        2,
        {
          "namedComponents": "arrow-function",
          "unnamedComponents": "arrow-function"
        }
      ],
      "react-hooks/rules-of-hooks": "error",
      "react-hooks/exhaustive-deps": "error",
      "react/jsx-boolean-value": "off",
      "jest/no-deprecated-functions": "off",
      "jsx-a11y/no-noninteractive-element-interactions": "off",
      "jsx-a11y/no-static-element-interactions": "off",
      "jsx-a11y/click-events-have-key-events": "off",
      "jsx-a11y/no-onchange": "off",
      "import/prefer-default-export": "off",
      "no-console": "warn",
      "node/no-unpublished-import": "warn",
      "node/no-missing-import": "warn",
      "node/no-unsupported-features/es-syntax": "off",
      "import/extensions": "off",
      "import/no-extraneous-dependencies": "off"
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
